<Page
    x:Class="the_eyes.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:the_eyes"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Canvas x:Name="Main_canvas">
        <Ellipse x:Name="left_eye" Fill="WhiteSmoke" Width="100" Height="100" Canvas.Left="250" Canvas.Top="200"/>
        <Line x:Name="line" X2="100" Fill="Red" Loaded="refresh_sight"/>
        <Line x:Name="line_max" X2="100" Fill="Green" Loaded="refresh_sight"/>
        <Ellipse x:Name="left_iris" Fill="Black" Width="20" Height="20"/>
        
        <Ellipse x:Name="right_eye" Fill="WhiteSmoke" Width="100" Height="100" Canvas.Left="500" Canvas.Top="200"/>
        <Line x:Name="line2" X2="100" Fill="Red" Loaded="refresh_sight"/>
        <Ellipse x:Name="right_iris" Fill="Black" Width="20" Height="20"/>

        <TextBox x:Name="debug" Foreground="White" Text="TEST"></TextBox>
    </Canvas>
</Page>
