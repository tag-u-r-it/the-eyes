<Page
    x:Class="the_eyes.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:the_eyes"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Canvas x:ConnectionId='2' x:Name="Main_canvas">
        <Ellipse x:ConnectionId='3' x:Name="left_eye" Fill="WhiteSmoke" Width="100" Height="100" Canvas.Left="250" Canvas.Top="200"/>
        <Line x:ConnectionId='4' x:Name="line" X2="100" Fill="Red"                       />
        <Line x:ConnectionId='5' x:Name="line_max" X2="100" Fill="Green"                       />
        <Ellipse x:ConnectionId='6' x:Name="left_iris" Fill="Black" Width="20" Height="20"/>
        
        <Ellipse x:ConnectionId='7' x:Name="right_eye" Fill="WhiteSmoke" Width="100" Height="100" Canvas.Left="500" Canvas.Top="200"/>
        <Line x:ConnectionId='8' x:Name="line2" X2="100" Fill="Red"                       />
        <Line x:ConnectionId='9' x:Name="line_max2" X2="100" Fill="Green"                       />
        <Ellipse x:ConnectionId='10' x:Name="right_iris" Fill="Black" Width="20" Height="20"/>
    </Canvas>
</Page>

